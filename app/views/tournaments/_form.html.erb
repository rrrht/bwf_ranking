<%= form_with(model: tournament, local: true) do |form| %>
  <% if tournament.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(tournament.errors.count, "error") %> prohibited this tournament from being saved:</h2>

      <ul>
        <% tournament.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label "トーナメント名", style: "display: block" %>
    <%= form.text_field :name, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= form.label "グレード", style: "display: block" %>
    <%= form.text_field :grade, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= form.label "開始日", style: "display: block" %>
    <%= form.date_field :start_date, class: "form-control", required: true %>
  </div>

  <div class="mt-4">
    <%= form.submit "登録する", class: "btn btn-primary" %>
    <%= link_to "キャンセル", cancel_path, class: "btn btn-secondary"%>
  </div>
<% end %>
