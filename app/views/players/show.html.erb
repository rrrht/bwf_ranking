<div class="container">
  <% if notice %>
    <div class="alert alert-success">
      <%= notice %>
    </div>
  <% end %>

  <div class="card mb-4 shadow-sm">
    <div class="card-body">
      <%= render @player %>
    </div>
  </div>

  <div class="d-flex gap-2">
    <%= link_to "選手を編集", edit_player_path(@player), class: "btn btn-outline-primary" %>
    <%= link_to "一覧へ戻る", players_path, class: "btn btn-outline-secondary" %>
    <%= button_to "選手を削除", @player, method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-danger" %>
  </div>
</div>
