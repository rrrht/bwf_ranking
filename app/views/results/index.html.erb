<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="h3 fw-bold">試合結果</h1>
  <%= link_to "＋ 試合結果を登録", new_result_path, class: "btn btn-dark" %>
</div>

<table class="table table-sm table-striped table-hover text-center align-middle">
  <thead>
    <tr>
      <th>選手ID</th>
      <th>ポイント</th>
      <th>ラウンド</th>
      <th>トーナメントID</th>
      <th>トーナメント開始日</th>
      <th>アクション</th>
    </tr>
  </thead>
  <tbody>
    <% @results.each do |result| %>
      <tr>
        <td><%= result.player_id %></td>
        <td><%= result.points %></td>
        <td><%= result.round %></td>
        <td><%= result.tournament_id %></td>
        <td></td>
        <td><%= render "action_button", result: result %></td>
      </tr>
    <% end %>
  </tbody>
</table>
