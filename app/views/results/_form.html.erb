<%= form_with(model: result) do |form| %>
  <% if result.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(result.errors.count, "error") %> prohibited this result from being saved:</h2>

      <ul>
        <% result.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label "プレイヤーID", style: "display: block" %>
    <%= form.text_field :player_id, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= form.label "トーナメントID", style: "display: block" %>
    <%= form.text_field :tournament_id, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= form.label "ラウンド", style: "display: block" %>
    <%= form.text_field :round, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= form.label "ポイント", style: "display: block" %>
    <%= form.number_field :points, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= form.submit submit_text, class: "btn btn-primary"%>
    <%= link_to "キャンセル", cancel_path, class: "btn btn-secondary" %>
  </div>
<% end %>
