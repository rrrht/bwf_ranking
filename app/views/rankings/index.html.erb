<h1 class="fw-bold border-bottom pb-2 mb-4">世界ランキング</h1>

<table class="table table-striped table-hover text-center align-middle">
  <thead>
    <tr>
      <th>順位</th>
      <th class="text-start">名前</th>
      <th>国</th>
      <th>ポイント</th>
    </tr>
  </thead>
  <tbody>
    <% @rankings.each_with_index do |entry, index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td class="text-start"><strong><%= entry[:player].name %></strong></td>
        <td><%= entry[:player].country %></td>
        <td><%= entry[:total_points] %></td>
      </tr>
    <% end %>
  </tbody>
</table>
